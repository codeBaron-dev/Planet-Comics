<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanetComics" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2%</item>
    </style>

    <style name="Custom" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.DeviceDefault</item>
        <!--<item name="DialogTitleText">Please waitâ€¦</item>-->
        <item name="DialogSpotColor">@color/purple_200</item>
        <item name="DialogSpotCount">6</item>
        <!--<item name="android:textSize">@dimen/_10sdp</item>-->
        <item name="fontFamily">@font/edu_nswact_foundation_semi_bold</item>
        <item name="android:capitalize">words</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <style name="SearchTextStyle">
        <!-- Custom values write to here for SearchEditText. -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">Search songs and artist</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">#80999999</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>